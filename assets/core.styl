// Styles necessary for Quill

LIST_STYLE_WIDTH = 1.2em
LIST_STYLE_MARGIN = 0.3em
LIST_STYLE_OUTER_WIDTH = LIST_STYLE_MARGIN + LIST_STYLE_WIDTH
MAX_INDENT = 3

resets(arr)
  unquote('list-' + join(' list-', arr))

.ql-container
  box-sizing: border-box
  font-family: Helvetica, Arial, sans-serif
  font-size: 13px
  height: 100%
  margin: 0
  position: relative

.ql-container.ql-disabled
  .ql-tooltip
    visibility: hidden
  .ql-editor
    ul[data-checked] > li::before
      pointer-events: none

.ql-clipboard
  position: absolute
  width: 1px
  height: 1px
  overflow: hidden
  p
    margin: 0
    padding: 0

.ql-editor
  box-sizing: border-box
  line-height: 1.42
  height: 100%
  outline: none
  overflow-y: auto
  padding: 12px 15px
  tab-size: 4
  -moz-tab-size: 4
  text-align: left
  white-space: pre-wrap
  word-wrap: break-word
  > *
    cursor: text

  p, ol, ul, pre
    margin: 0
    padding: 0
    counter-reset: resets(1..MAX_INDENT)
  ol > li, ul > li
    list-style-type: none
  ul > li::before
    content: '\2022'
  ul[data-checked=true],
  ul[data-checked=false]
    pointer-events: none
    > li *
      pointer-events: all
    > li::before
      color: #777
      cursor: pointer
      pointer-events: all
  ul[data-checked=true] > li::before
    content: '\2611'
  ul[data-checked=false] > li::before
    content: '\2610'
  li::before
    display: inline-block
    white-space: nowrap
    width: LIST_STYLE_WIDTH
  li::before
    margin-left: -1*LIST_STYLE_OUTER_WIDTH
    margin-right: LIST_STYLE_MARGIN
    text-align: right
  ol, ul
    li
      padding-left: LIST_STYLE_OUTER_WIDTH
  ol
    li
      counter-reset: resets(1..MAX_INDENT)
      counter-increment: unquote('list-0')
      &:before
        content: counter(list-0, decimal) '. '
    for num in (1..MAX_INDENT)
      li.ql-indent-{num}
        counter-increment: unquote('list-' + num)
        &:before
          content: unquote('counter(list-' + num + ', decimal)') '. '
      if (num < MAX_INDENT)
        li.ql-indent-{num}
          counter-reset: resets((num+1)..MAX_INDENT)
  for num in (1..MAX_INDENT)
    .ql-indent-{num}
      padding-left: (1.5*num)em
    li.ql-indent-{num}
      padding-left: (1.5*num + LIST_STYLE_OUTER_WIDTH)em

.ql-editor.ql-blank::before
  color: rgba(0,0,0,0.6)
  content: attr(data-placeholder)
  font-style: italic
  pointer-events: none
  position: absolute
